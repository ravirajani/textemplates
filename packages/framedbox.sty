\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{framedbox}
\RequirePackage{tcolorbox}
\RequirePackage{comment}

\newlength{\tcbparindent}
\setlength\tcbparindent{\parindent}
\tcbuselibrary{skins,breakable,theorems}
\tcbset{enhanced jigsaw, breakable, sharp corners=all, fonttitle=\bfseries,
before skip=12pt plus 5pt minus 5pt, after skip=12pt plus 5pt minus 5pt,
top=1mm, toptitle=1mm, bottomtitle=0pt, bottom=1mm, left=1mm, right=1mm, middle=2mm,
coltitle=black, titlerule=0pt, colback=white, colbacktitle=white, center title,
before upper={\setlength\parindent{\tcbparindent}}}

% Example:
% \begin{soltn}
%   Write solution here.
% \end{soltn}
% Hide the solution with \excludecomment{soltn}
\newtcolorbox{soltnbox}[1][]{before skip=5pt, #1}
\specialcomment{soltn}{\begin{soltnbox}
    \noindent\textbf{\textit{Solution}}\hspace{1.5ex plus 1.5ex minus .3ex}}
    {\end{soltnbox}}

% Example:
% \begin{ruledbox}
%   Write boxed text here.
% \end{ruledbox}
\newtcolorbox{ruledbox}[1][]{boxrule=0pt, toprule=1pt, bottomrule=1pt, #1}

% Example:
% \begin{framedbox}[title=My Title, label=mylabel]
%     Write boxed text here. Refer to it in the text with \pageref{mylabel}
%     \tcblower
%     This is the lower part of the box.
% \end{framedbox}
\newtcolorbox{framedbox}[1][]{#1}

\newtcbox{\code}{
    nobeforeafter,box align=base,
    boxrule=0pt,
    fontupper=\ttfamily,
    top=0pt,bottom=0pt,left=2pt,right=2pt,
    colback=black!5!white}
