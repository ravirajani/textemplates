\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{slidegeometry}
\RequirePackage{geometry}
\RequirePackage{kvoptions}

\SetupKeyvalOptions{
    family=SG,
    prefix=SG@
}

\DeclareStringOption[85]{aspectratio}

\ProcessKeyvalOptions*

\ifnum\pdf@strcmp{\SG@aspectratio}{85}=0
\geometry{papersize={15.36cm,9.6cm}} % 8:5
\setbeamersize{text margin right=1.62cm, text margin left=1.62cm} % retain 4:3 layout aligned center
\else\ifnum\pdf@strcmp{\SG@aspectratio}{169}=0
\geometry{papersize={17.12cm,9.63cm}} % 16:9
\setbeamersize{text margin right=2.5cm, text margin left=2.5cm} % retain 4:3 layout aligned center
\fi\fi
