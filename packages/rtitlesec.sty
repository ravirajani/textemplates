\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rtitlesec}
\RequirePackage[pagestyles]{titlesec}

\newcommand{\hdrfont}{\fontsize{9}{11}\selectfont}

\titleformat{\chapter}[display]
{\filcenter\bfseries\Large}{\LARGE\thechapter}{.5ex}{}
\titleformat{\section}
{\normalfont\normalsize\bfseries\filcenter}{\thesection}{1.5ex}{}
\titleformat{\subsection}
{\normalfont\normalsize\itshape\bfseries\filcenter}{\thesubsection}{1.5ex}{}
\titleformat{\subsubsection}
{\normalfont\normalsize\itshape\filcenter}{\thesubsubsection}{1.5ex}{}
\titleformat{\paragraph}[runin]
{\normalfont\normalsize\bfseries}{\theparagraph}{1.5ex}{}
\titleformat{\subparagraph}[runin]
{\normalfont\normalsize\bfseries}{\thesubparagraph}{1.5ex}{}

\titlespacing*{\chapter}{2em}{-10pt}{44pt}[2em]
\titlespacing*{\section} {0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}
\titlespacing*{\subsection} {0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}
\titlespacing*{\subsubsection}{0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}
\titlespacing*{\paragraph} {0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus 1.5ex minus .3ex}
\titlespacing*{\subparagraph} {\parindent}{3.25ex plus 1ex minus .2ex}{1.5ex plus 1.5ex minus .3ex}

\renewpagestyle{plain}{
    \sethead{}{}{}
    \setfoot{}{\hdrfont\thepage}{}
}
\newpagestyle{report}{%
    \sethead{}{\hdrfont\thechapter\hspace{1.5ex}\MakeUppercase{\chaptertitle}}{}
    \setfoot{}{\hdrfont\thepage}{}
}
\newpagestyle{report*}{%
    \sethead{}{\hdrfont\MakeUppercase{\chaptertitle}}{}
    \setfoot{}{\hdrfont\thepage}{}
}
\newpagestyle{article}{%
    \sethead{}{\hdrfont\thesection\hspace{1.5ex}\MakeUppercase{\sectiontitle}}{}
    \setfoot{}{\hdrfont\thepage}{}
}

\assignpagestyle{\chapter}{plain}

% Use commands \pagestyle{<pagestyle>} to change all pagestyles from here on in document,
% and \thispagestyle{<pagestyle>} to change the current pagestyle