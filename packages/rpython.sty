\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{rpython}
\RequirePackage{kvoptions}

\SetupKeyvalOptions{
  family=RPY,
  prefix=RPY@
}

\DeclareBoolOption{verbatim}

\ProcessKeyvalOptions*

\ifRPY@verbatim
  \PassOptionsToPackage{verbatim=true}{minted}
\fi

\RequirePackage{minted}

\setminted{%
  xleftmargin=\dimexpr\labelsep + 9pt\relax,
  linenos,
  fontfamily=tt,
  numbersep=9pt,
  escapeinside=``,
  beameroverlays
}
\newminted[python]{python}{}
\newmintinline[py]{python}{escapeinside=``}

\renewcommand{\theFancyVerbLine}{\sffamily
\textcolor[RGB]{28,70,192}{\scriptsize\arabic{FancyVerbLine}}}
